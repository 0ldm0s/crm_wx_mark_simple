<resources>

    <!-- Base application theme. -->
   <style name="push_style">
		<item name="android:hint">@string/style_hint</item>
		<item name="android:inputType">number</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_alias">
		<item name="android:hint">@string/alias_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_tag">
		<item name="android:hint">@string/tag_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="NoActionBar">
	<!--	<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>-->
		<item name="android:windowActionBar">false</item>
	</style>
	<style name="state_styele">
		<item name="android:textColor">@color/main_text_color</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="tip_styele">
		<item name="android:textColor">@color/grey_text_color</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="mapping_top_bottom">

	</style>
	<style name="btn_blu_style">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/btn_circular_all_blue</item>
	</style>
	<style name="circular_icon">
		<item name="android:layout_width">15dp</item>
		<item name="android:layout_height">15dp</item>
	</style>
	<!--Dipa: PopupWindow窗口淡入淡出动画 -->
	<style name="AnimationFade">
		<item name="android:windowEnterAnimation">@anim/fede_in</item>
		<item name="android:windowExitAnimation">@anim/fede_out</item>
	</style>
</resources>
